# Example environment configuration
# Copy this to .env and fill in your values

# Logging
EARNINGS_LOG_LEVEL=INFO
EARNINGS_LOG_TO_FILE=true

# API Keys (optional - leave blank to use free sources only)
EARNINGS_SERPAPI_KEY=
EARNINGS_NEWSAPI_KEY=

# HTTP Settings
EARNINGS_REQUEST_TIMEOUT=30
EARNINGS_MAX_RETRIES=3
EARNINGS_RATE_LIMIT_DELAY=1.0
EARNINGS_RESPECT_ROBOTS_TXT=true

# Discovery
EARNINGS_DEFAULT_SEARCH_WINDOW_DAYS=7
EARNINGS_DEFAULT_TOP_K=20
EARNINGS_ENABLE_RSS=true
EARNINGS_ENABLE_SEARCH_API=false

# Sentiment Analysis
EARNINGS_SENTIMENT_MODEL=vader  # Options: vader, finbert, both
EARNINGS_USE_GPU=false
EARNINGS_SENTIMENT_BATCH_SIZE=8

# Content Filtering
EARNINGS_MIN_ARTICLE_LENGTH=100
EARNINGS_MAX_ARTICLE_LENGTH=50000

# Reporting
EARNINGS_GENERATE_HTML=true
EARNINGS_GENERATE_CSV=true
EARNINGS_GENERATE_PLOTS=true
EARNINGS_PLOT_FORMAT=png
EARNINGS_PLOT_DPI=300

# Advanced Features
EARNINGS_ENABLE_ASPECT_EXTRACTION=false
EARNINGS_ENABLE_DEDUPLICATION=true
EARNINGS_DEDUPLICATION_THRESHOLD=0.85
